<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <!--状态栏颜色-->
        <!--<item name="colorPrimaryDark">@color/green</item>-->
        <!--Toolbar颜色-->
        <!--<item name="colorPrimary">@color/green</item>-->
        <!--返回键样式-->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <!--toolbar菜单项图标的颜色-->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--修改searchView样式-->
        <!--<item name="searchViewStyle">@style/SearchViewStyle</item>-->
        <!--Activity Transition-->
        <item name="android:windowContentTransitions">true</item>
        <!--页面切换动画-->
        <!--<item name="android:windowAnimationStyle">@style/AnimationActivity</item>-->
    </style>

    <!--页面切换动画-->
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_bottom</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_top</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_top</item>
    </style>

    <!--侧滑栏样式-->
    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <!--搜索栏样式-->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/search_icon</item>
    </style>

    <!--checkBox样式-->
    <style name="CheckBoxColor" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/green</item>
        <item name="android:colorControlNormal">@color/green</item>
    </style>
</resources>
