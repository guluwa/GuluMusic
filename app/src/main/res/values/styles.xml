<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <!--状态栏颜色-->
        <!--<item name="colorPrimaryDark">@color/green</item>-->
        <!--Toolbar颜色-->
        <!--<item name="colorPrimary">@color/green</item>-->
        <!--返回键样式-->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
        <!--toolbar菜单项图标的颜色-->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--修改searchView样式-->
        <!--<item name="searchViewStyle">@style/SearchViewStyle</item>-->
        <!--Activity Transition-->
        <item name="android:windowContentTransitions">true</item>
        <!--页面切换动画-->
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <!--页面切换动画-->
    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/alpha_in</item>
        <item name="android:activityCloseExitAnimation">@anim/alpha_out</item>
        <item name="android:activityOpenExitAnimation">@anim/alpha_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/alpha_in</item>
    </style>

    <!--侧滑栏样式-->
    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <!--checkBox样式-->
    <style name="CheckBoxColor" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">@color/green</item>
        <item name="android:colorControlNormal">@color/green</item>
    </style>

    <!-- Dialog样式-->
    <style name="DialogStyle" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- dialog底部右边菜单动画 -->
    <style name="bottom_menu_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/right_menu_enter</item>
        <item name="@android:windowExitAnimation">@anim/right_menu_exit</item>
    </style>

    <style name="Theme.RetroMusic.Notification" parent="@android:style/TextAppearance.StatusBar.EventContent" />

    <style name="Theme.RetroMusic.Notification.Title" parent="@android:style/TextAppearance.StatusBar.EventContent.Title" />
</resources>
